{
    "name": "nexus",
    "scripts": {
        "build": "node copyFiles.js --pre && tsc && node copyFiles.js",
        "watch": "tsc -w",
        "start": "npm run build && electron --trace-warnings . --dev --in-core ",
        "package": "npm run build && npx electron-builder build --win",
        "update-nexus": "npm update @nexus-app/nexus-exporter && npm update @nexus-app/nexus-app-module-builder",
        "package:test": "npm run build && electron-builder --dir",
        "publish": "npm run build && cd ./dist && npm publish --access public"
    },
    "main": "./dist/main.js",
    "devDependencies": {
        "@types/semver": "^7.7.0",
        "@types/yauzl-promise": "^4.0.1",
        "electron": "^35.1.5",
        "electron-builder": "^24.13.3",
        "typescript": "^4.8.3"
    },
    "dependencies": {
        "@nexus-app/nexus-exporter": "^1.0.0",
        "@nexus-app/nexus-module-builder": "^1.0.0",
        "electron-updater": "^6.6.2",
        "typescript": "^4.8.3",
        "yauzl-promise": "^4.0.0"
    },
    "productName": "Nexus",
    "build": {
        "nsis": {
            "allowToChangeInstallationDirectory": true,
            "oneClick": false
        },
        "icon": "./dist/view/assets/icon",
        "appId": "com.aarontburn.Nexus",
        "asar": true,
        "files": [
            "./dist/**/*"
        ],
        "directories": {
            "output": "package"
        },
        "publish": {
            "provider": "github",
            "owner": "aarontburn",
            "repo": "nexus-core"
        }
    }
}
