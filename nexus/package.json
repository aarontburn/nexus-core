{
    "name": "@nexus-app/nexus-client",
    "version": "0.0.2",
    "scripts": {
        "build": "node copyFiles.js --pre && tsc && node copyFiles.js",
        "watch": "tsc -w",
        "start": "npm run build && cd ./dist && electron --trace-warnings . --dev --in-core ",
        "package": "npm run build && npx electron-builder build --win",
        "package:test": "npm run build && electron-builder --dir",
        "publish": "npm run build && cd ./dist && npm publish --access public"
    },
    "main": "./dist/main.js",
    "devDependencies": {
        "@types/semver": "^7.7.0",
        "@types/yauzl-promise": "^4.0.1",
        "electron": "^35.1.5",
        "electron-builder": "^24.13.3",
        "typescript": "^4.8.3"
    },
    "dependencies": {
        "@nexus-app/nexus-exporter": "^1.0.0",
        "@nexus-app/nexus-module-builder": "^1.0.0",
        "electron-updater": "^6.6.2",
        "typescript": "^4.8.3",
        "yauzl-promise": "^4.0.0"
    }
}