{
    "scripts": {
        "build": "node copyFiles.js --pre && tsc && node copyFiles.js",
        "watch": "tsc -w",
        "start": "npm run build && cd ./dist && electron . --dev --in-core ",
        "package:win": "npm run build && npx electron-builder build --win --publish never",
        "package:arm64": "npm run build && npx electron-builder build --arm64 --publish never",
        "package:amd64": "npm run build && npx electron-builder build --linux --publish never",
        "package:test": "npm run build && electron-builder --dir",
        "publish": "npm run build && cd ./dist && npm publish --access public",
        "postinstall": "npm install @nexus-app/nexus-exporter@latest @nexus-app/nexus-module-builder@latest"
    },
    "main": "./dist/main.js",
    "devDependencies": {
        "@types/semver": "^7.7.0",
        "@types/showdown": "^2.0.6",
        "@types/yauzl-promise": "^4.0.1",
        "electron": "^35.1.5",
        "electron-builder": "^24.13.3",
        "typescript": "^4.8.3"
    },
    "dependencies": {
        "@nexus-app/nexus-exporter": "^1.2.0",
        "@nexus-app/nexus-module-builder": "^1.0.5",
        "electron-updater": "^6.6.2",
        "showdown": "^2.1.0",
        "typescript": "^4.8.3",
        "yauzl-promise": "^4.0.0"
    }
}
