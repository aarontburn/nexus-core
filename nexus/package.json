{
  "name": "nexus",
  "version": "1.0.0",
  "description": "Micro-app platform.",
  "scripts": {
    "build": "node copyFiles.js --pre && tsc && node copyFiles.js",
    "watch": "tsc -w",
    "start": "npm run build && electron ./dist/main.js --dev --in-core",
    "package": "npm run build && npx electron-builder build",
    "update-nexus": "npm update @nexus/nexus-module-builder",
    "package:test": "npm run build && electron-builder --dir"
  },
  "main": "./dist/main.js",
  "author": "aarontburn",
  "devDependencies": {
    "@types/yauzl-promise": "^4.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@nexus/nexus-module-builder": "https://gitpkg.vercel.app/aarontburn/nexus-core/module-builder/dist?main",
    "typescript": "^4.8.3",
    "yauzl-promise": "^4.0.0"
  },
  "productName": "Nexus",
  "build": {
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "appId": "com.aarontburn.Nexus",
    "asar": true,
    "files": [
      "./dist/**/*"
    ],
    "directories": {
      "output": "package"
    }
  }
}